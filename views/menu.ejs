            @import url('https://fonts.googleapis.com/css?family=Open+Sans:400,600&display=swap');

* {
	box-sizing: border-box;
}

body{
    background: hsl(0, 0%, 100%);
	font-family: Helvetica, sans-serif;
}

.hx {
	font-family: 'ariel', sans-serif;
}

.qr {
	margin: auto;
}

hr{
    border: 2px solid #dac257;
	width: 10vh;
}

main {
	display: flex;
	align-items: center;
	justify-content: center;
	min-height: auto;
	margin: 0;
}

.container {
	/* CHANGE TO GRID */
	display: grid;
	grid-template-columns: repeat(1, 4fr);
	justify-items: center;
	grid-gap: 20px;
	width: 100vh;
	max-width: 100%;
	margin: auto;
}

.card {
	background-color: #fff;
	border-radius: 10px;
	box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
	overflow: hidden;
	width: 350px;
	min-height: auto;
}

.card-header img {
	object-fit: cover;
	height: 200px;
	width: 100%;
}

.card-body {
	display: flex;
	flex-direction: column;
	align-items: start;
	padding: 20px;
	min-height: 700px;
}

.card-body h4 {
	margin: 10px 0;
}

.card-body p {
	font-size: 13px;
	margin: 0 0 40px;
}

.tag {
	background-color: #fff;
	border-radius: 50px;
	font-size: 12px;
	color: #fff;
	margin: 0;
	padding: 2px 10px;
	text-transform: uppercase;
}

.tag-teal {
	background-color: #0084ff;
}

.tag-purple {
	background-color: #cbbbf7;
}

.tag-pink {
	background-color: #751f1f;
}

.user {
	display: flex;
	margin-top: auto;
}

.user img {
	border-radius: 50%;
	margin-right: 10px;
	height: 40px;
	width: 40px;
}

.user-info h5 {
	margin: 0;
}

.user-info small {
	color: #888785;
}

@media (max-width: 940px) {
	.container {
		grid-template-columns: 1fr;
	}
}

        </style>
